<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomEmptyView">
        <attr name="emptyTextColor" format="color" />
        <attr name="emptyTextSize" format="dimension" />
        <attr name="emptyText" format="string" />
        <attr name="netWorkErrorText" format="string" />
        <attr name="emptyIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="AvatarView">
        <attr name="shapeType" format="enum">
            <enum name="circle" value="0" />
            <enum name="round" value="1" />
            <enum name="corner" value="2" />
        </attr>
        <attr name="radiusLeftBottom" format="dimension" />
        <attr name="radiusLeftTop" format="dimension" />
        <attr name="radiusRightTop" format="dimension" />
        <attr name="radiusRightBottom" format="dimension" />
        <attr name="radius" format="dimension" />
        <attr name="avatarBorderWidth" format="dimension" />
        <attr name="avatarBorderColor" format="color" />
    </declare-styleable>
</resources>