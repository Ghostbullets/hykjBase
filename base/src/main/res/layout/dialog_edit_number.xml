<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="修改购买数量"
        android:textColor="@color/black_33"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="126dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_num"
        android:divider="@drawable/divider_bg_h_1dp"
        android:orientation="horizontal"
        android:showDividers="middle">

        <TextView
            android:id="@+id/tv_sub"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="—"
            android:textColor="@color/black_99"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="1234567890"
            android:gravity="center"
            android:inputType="phone"
            android:text="1"
            android:textColor="@color/black_66"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/black_99"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:divider="@drawable/divider_trans_h_10dp"
        android:showDividers="middle"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cancel"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="取消"
            android:gravity="center"
            android:background="@drawable/bg_shape_gray99_5dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_confirm"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="确定"
            android:gravity="center"
            android:background="@drawable/bg_shape_black_5dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>